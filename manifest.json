{
  "manifest_version": 3,
  "name": "B3M ISRC Extractor",
  "version": "1.2.0",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["https://distrokid.com/*"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon18.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon18.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["https://distrokid.com/*"],
      "js": ["content.js"]
    }
  ]
}